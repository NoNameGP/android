<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0d0d0d">

    <View
        android:id="@+id/banner_v"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#191919"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/arrow_back_iv"
        android:layout_width="13.5dp"
        android:layout_height="23.6dp"
        android:background="#a6afaf"
        android:layout_marginTop="41dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="18sp"
        android:textColor="#dcefe9"
        android:gravity="center_horizontal"
        android:text="길찾기"
        android:layout_marginTop="36dp"
        android:layout_marginStart="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/arrow_back_iv"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#f3f3fc"
        android:gravity="center_horizontal"
        android:text="음성인식"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/start_set_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#f3f3fc"
        android:gravity="center_horizontal"
        android:text="출발지 설정"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/banner_v"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/start_voice_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="20sp"
        android:textColor="#a6afaf"
        android:text="출발지를 말씀해주세요"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/start_set_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/voicemic_iv"
        android:layout_width="77.7dp"
        android:layout_height="113.1dp"
        android:background="#93fbff"
        android:layout_marginTop="231dp"
        app:layout_constraintTop_toBottomOf="@+id/start_voice_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="인식된 문장"
        android:textStyle="normal"
        android:textSize="20sp"
        android:textColor="#a6afaf"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/voicemic_iv" />

    <TextView
        android:id="@+id/tvState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="인식 상태"
        android:textStyle="normal"
        android:textSize="20sp"
        android:textColor="#a6afaf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>