<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0d0d0d">

    <View
        android:id="@+id/banner_v"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#191919"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/arrow_back_iv"
        android:layout_width="13.5dp"
        android:layout_height="23.6dp"
        android:background="#a6afaf"
        android:layout_marginTop="41dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#f3f3fc"
        android:gravity="center_horizontal"
        android:text="길찾기"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/start_set_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#f3f3fc"
        android:gravity="center_horizontal"
        android:text="출발지 설정"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/banner_v"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/search_btn"
        android:layout_width="280dp"
        android:layout_height="72dp"
        android:textStyle="normal"
        android:textSize="24sp"
        android:text="검색하기"
        android:textColor="#191919"
        android:paddingVertical="19dp"
        android:gravity="center"
        android:layout_marginTop="21dp"
        android:background="@drawable/start_set_btn_shape"
        app:layout_constraintTop_toBottomOf="@+id/start_set_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/voice_btn"
        android:layout_width="280dp"
        android:layout_height="72dp"
        android:textStyle="normal"
        android:textSize="24sp"
        android:text="음성인식"
        android:textColor="#191919"
        android:paddingVertical="19dp"
        android:gravity="center"
        android:layout_marginTop="21dp"
        android:background="@drawable/start_set_btn_shape"
        app:layout_constraintTop_toBottomOf="@+id/search_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/gps_btn"
        android:layout_width="280dp"
        android:layout_height="72dp"
        android:textStyle="normal"
        android:textSize="24sp"
        android:text="현재위치"
        android:textColor="#191919"
        android:paddingVertical="19dp"
        android:gravity="center"
        android:layout_marginTop="21dp"
        android:background="@drawable/start_set_btn_shape"
        app:layout_constraintTop_toBottomOf="@+id/voice_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>